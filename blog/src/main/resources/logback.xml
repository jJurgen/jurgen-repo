<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false" >
    
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%blue(%-5level) %yellow([%-20.30logger{0}]): %msg%n</pattern>
        </encoder>
    </appender>
    
    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>